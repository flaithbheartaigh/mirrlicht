#include <eikon.rh>
#include "SymbIrrlicht.hrh"
#include "SymbIrrlicht.rls"
#include <avkon.rsg>
#include <avkon.rh>
#include <avkon.mbg>
#include <appinfo.rh>



//  RESOURCE DEFINITIONS 
// -----------------------------------------------------------------------------
//
//    Define the resource file signature
//    This resource should be empty.
//
// -----------------------------------------------------------------------------
//
RESOURCE RSS_SIGNATURE { }

// -----------------------------------------------------------------------------
//
//    Default Document Name
//
// -----------------------------------------------------------------------------
//
RESOURCE TBUF { buf = "SymbIrrlicht"; }

// -----------------------------------------------------------------------------
//
//    Define default menu and CBA key.
//
// -----------------------------------------------------------------------------
//
RESOURCE EIK_APP_INFO
    {
    status_pane = r_symbirrlicht_status_pane;
    }

// -----------------------------------------------------------------------------
//
//    Localizable application information
//
// -----------------------------------------------------------------------------
//
RESOURCE LOCALISABLE_APP_INFO r_symbirrlicht_localisable_app_info
    {
    short_caption = qtn_app_short_caption_string;
    caption_and_icon = 
    CAPTION_AND_ICON_INFO
        {
        caption = qtn_app_caption_string;

        number_of_icons = 1;
        icon_file = "\\resource\\apps\\SymbIrrlicht_REG.mif";
        };
    }

//----------------------------------------------------
//   
//    r_symbirrlicht_hotkeys
//
//----------------------------------------------------
//
RESOURCE HOTKEYS r_symbirrlicht_hotkeys
    {
    control =
        {
        HOTKEY { command = EAknCmdExit; key = 'e'; }
        };
    }

//----------------------------------------------------
//   
//    r_symbirrlicht_view1
//
//----------------------------------------------------
//
RESOURCE AVKON_VIEW r_symbirrlicht_view1
    {
    hotkeys = r_symbirrlicht_hotkeys;
    menubar = r_symbirrlicht_menubar_view1;  
    cba     = R_AVKON_SOFTKEYS_SELECTION_LIST;    
    }

//----------------------------------------------------
//   
//    r_symbirrlicht_menubar_view1
//
//----------------------------------------------------
//
RESOURCE MENU_BAR r_symbirrlicht_menubar_view1
    {
    titles =
        {
        MENU_TITLE { menu_pane = r_symbirrlicht_app_menu; txt = "App"; },
        MENU_TITLE { menu_pane = r_symbirrlicht_view1_menu; txt = "View"; }
        };
    }

//----------------------------------------------------
//   
//    r_symbirrlicht_view1_menu
//
//----------------------------------------------------
//
RESOURCE MENU_PANE r_symbirrlicht_view1_menu
    {
    items =
        {
        MENU_ITEM { command = ESymbIrrlichtCmdAppTest; txt = qtn_view1_option_item; }
        };
    }

//----------------------------------------------------
//   
//    r_symbirrlicht_view2
//
//----------------------------------------------------
//
RESOURCE AVKON_VIEW r_symbirrlicht_view2
    {
    hotkeys = r_symbirrlicht_hotkeys;
    menubar = r_symbirrlicht_menubar_view2;  
    cba     = R_AVKON_SOFTKEYS_SELECTION_LIST; 
    }

//----------------------------------------------------
//   
//    r_symbirrlicht_menubar_view2
//
//----------------------------------------------------
//
RESOURCE MENU_BAR r_symbirrlicht_menubar_view2
    {
    titles =
        {
        MENU_TITLE { menu_pane = r_symbirrlicht_app_menu; txt = "App"; },
        MENU_TITLE { menu_pane = r_symbirrlicht_view2_menu; txt = "View"; }
        };
    }

//----------------------------------------------------
//   
//    r_symbirrlicht_view2_menu
//
//----------------------------------------------------
//
RESOURCE MENU_PANE r_symbirrlicht_view2_menu
    {
    items =
        {
        MENU_ITEM { command = ESymbIrrlichtCmdAppTest; txt = qtn_view2_option_item; }
        };
    }

//----------------------------------------------------
//   
//    r_symbirrlicht_app_menu
//
//----------------------------------------------------
//
RESOURCE MENU_PANE r_symbirrlicht_app_menu
    {
    items =
        {
        MENU_ITEM { command = ESymbIrrlichtCmdAppTest; txt = qtn_appl_option_item; },
        MENU_ITEM { command = EAknCmdExit; txt = qtn_appl_exit; }
        };
    }

RESOURCE STATUS_PANE_APP_MODEL r_symbirrlicht_status_pane
    {
	panes =
		{
		SPANE_PANE
			{
			id = EEikStatusPaneUidNavi;
			type = EAknCtNaviPane;
			resource = r_symbirrlicht_navi_decorator;
			}
		};
    }

//----------------------------------------------------
//   
//    r_symbirrlicht_navi_decorator
//
//----------------------------------------------------
//
RESOURCE NAVI_DECORATOR r_symbirrlicht_navi_decorator
    {
    type = ENaviDecoratorControlTabGroup;
    control = TAB_GROUP
		{
		tab_width = EAknTabWidthWithTwoTabs;  // two tabs
		active = 0;
		tabs = {
			TAB
				{
                id = ESymbIrrlichtView1Tab; // from application hrh
                txt = qtn_view1_tab;
                },
			TAB
				{
                id = ESymbIrrlichtView2Tab;
                txt = qtn_view2_tab;
				}
			};
		};
	}


